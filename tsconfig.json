{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        // Copied from @tsconfig/recommended because of https://github.com/TypeStrong/ts-node/issues/1954
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "outDir": "dist",
        "checkJs": false,
        "declaration": true
    },
    "include": ["**/*.ts"]
}
